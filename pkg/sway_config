    status_command i3status-rs /etc/sway/status.toml
    gaps 2 0 0 0
    position top
    pango_markup enabled
    output *
    tray_output *
    strip_workspace_name no
    strip_workspace_numbers no
    wrap_scroll yes
    workspace_buttons yes
    workspace_min_width 12
}

