exec_always  systemctl --user import-environment

set {
  $browser "firefox"
  $exit "swaymsg exit"
  $launcher "wofi -c /etc/xdg/wofi/config"
  $reload "swaymsg reload"
  $file_manager "foot ranger"
  $screenshot  "grim -g \"$(slurp)\" - | wl-copy"
  $term "footclient"
  $lock_screen "swaylock -c111111 -eFKl --font='DaddyTimeMono Nerd Font' --font-size=16  --indicator-idle-visible"
  $volume_down "amixer set Master 4%-"
  $volume_up "amixer set Master 4%+"
  $volume_toggle "amixer set Master toggle"
  $backlight_up "light -A 2"
  $backlight_down "light -U 2"
  $wifi "wifi"
  $bluetooth "bluetooth"
  $term_alt "foot"
}

	# Start Waybar
exec_always  pgrep -f 'waybar' || waybar &
	# D-Bus session
exec_always  pgrep -x dbus-daemon || dbus-daemon --session --address=unix:path=$XDG_RUNTIME_DIR/bus &
	# Foot server, so we can use footclient as term
exec_always  pgrep -f 'foot --server' && pkill -f -SIGHUP 'foot --server'
exec_always  pgrep -f 'foot --server'  || foot --server --log-no-syslog --log-level=warning &
	# Make is a notification daemon (similar to dunst)
exec_always  pgrep -x 'mako' || mako &

assign [class="^Firefox$" window_role="About"] 0: extra
assign [class="^Slack$" window_role="browser-window"] 9: slack
client.background #111111
client.focused #919d9f #919d9f #20203d #919d9f #919d9f
client.focused_inactive #20203d #20203d #FFFFFF #20203d #20203d
client.placeholder #000000 #0c0c0c #ffffff #000000 #0c0c0c
client.unfocused #111111 #111111 #FFFFFF #111111 #111111
client.urgent #e74c3c #e74c3c #FFFFFF #e74c3c #e74c3c
default_border pixel 4
default_floating_border pixel 2
floating_modifier Mod4
focus_follows_mouse no
focus_on_window_activation smart
focus_wrapping no
font pango:DaddyTimeMono Nerd Font Bold 14.000000
gaps inner 8
gaps outer 8
hide_edge_borders smart
mouse_warping output
smart_borders no_gaps
workspace_auto_back_and_forth yes
workspace_layout default

bindsym Mod4+Print  exec $screenshot
bindsym Print       exec $screenshot
